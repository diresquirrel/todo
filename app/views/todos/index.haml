.list-tasks
  %h1 All Tasks
  =render 'lists/list', :tasks => @tasks
  
.list-tasks-completed
  %h3 Completed
  =render 'lists/list', :tasks => @completedTasks
  
:coffeescript
  $(document).ready () ->
    if $('.list-tasks-completed .list-group li').length > 0
      $('.list-tasks-completed').show()
      return
    else
      $('.list-tasks-completed').hide()
      return